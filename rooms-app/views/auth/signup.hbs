<div id="form">
  <h2>Signup</h2>
  <form action="/auth/signup" method="POST">

    <label> Full Name:
      <input type="text" name="fullName" placeholder="Pepito Perez" required/>
    </label>

    <label> Email
      <input type="email" name="email" placeholder="rockstar@ironhack.com" required/>
    </label>

    <label> Password
      <input type="password" name="password" placeholder="********" required/>
    </label>

    <button type="submit" class="btn btn-primary">Create account</button>
  </form>

    {{!-- error message will be added here --}}
{{#if errorMessage}}
   {{errorMessage}}
{{/if}}