<h1>LIST OF ROOMS</h1>

<div class="grid">

    {{#each rooms}}
    <div class="card" style="width: 30rem;margin:20px">
        <div class="card-body">
            <h3 class="card-title">{{name}}</h3>
            <img src="{{imgUrl}}" alt="room image" class="card-img-top">
            <h2>Owner: {{owner.fullName}}</h2>
            <a href="/rooms/{{_id}}" class="btn btn-primary">See details</a>
        </div>
    </div>
    {{/each}}
</div>